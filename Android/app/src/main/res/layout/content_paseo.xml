<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.PaseoActivity"
    tools:showIn="@layout/activity_paseo"
    android:id="@+id/scrollViewPaseo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:focusableInTouchMode="true">

        <ProgressBar
            android:id="@+id/pgbPaseo"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/pgbPaseo"
            android:id="@+id/layoutContenedoInfoPaseo">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_title_black_24dp"/>
                <TextView
                    android:id="@+id/txtNombrePaseo"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Nombre:"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_send"/>
                <TextView
                    android:id="@+id/txtCategoriaPaseo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Categoria:"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_event_black_24dp"/>
                <TextView
                    android:id="@+id/txtFechaPaseo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha:"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_description_black_24dp"/>
                <TextView
                    android:id="@+id/txtDescripcionPaseo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción:"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_contact_phone_black_24dp"/>
                <TextView
                    android:id="@+id/txtTelefonoContactoPaseo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Teléfono:"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_web_black_24dp"/>
                <TextView
                    android:id="@+id/txtEmailContactoPaseo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WebSite:"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"></LinearLayout>

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapViewPaseo"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="1"
                liteMode="false"
                mapType="normal"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                >
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_attach_money_black_24dp"
                    android:layout_marginTop="12dp"/>
                <TextView
                    android:id="@+id/txtPrecioPaseo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,000.00"
                    android:layout_marginTop="12dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="32dp"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Espacios disponibles:"
                        />
                        <EditText
                            android:id="@+id/txtCupo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="2"
                            android:inputType="numberDecimal"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:digits="0123456789"
                            android:layout_marginLeft="8dp"
                            android:text="1"
                            android:textAlignment="textEnd"
                            android:background="@android:color/transparent"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"
                        android:paddingLeft="32dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Cantidad:"
                            android:gravity="center"/>
                        <EditText
                            android:id="@+id/txtCantPaseosCompra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="2"
                            android:inputType="numberDecimal"
                            android:digits="0123456789"
                            android:layout_marginLeft="8dp"
                            android:text="1"
                            android:textAlignment="textEnd"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:text="Total: $1,000.00"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:id="@+id/txtTotalCostoCompra"
                            android:textColor="@color/colorPrimaryDark"/>
                        <Button
                            android:id="@+id/btnComprar"
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:text="Comprar"
                            android:background="@color/colorPrimary"
                            android:textColor="@android:color/white"
                            />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>